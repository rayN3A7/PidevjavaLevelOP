<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="tn.esprit.Controllers.Produit.StockController"
         style="-fx-background-color: #091221;">
    
    <!-- Main Content -->
    <BorderPane stylesheets="@/assets/style/produit.css">
        <!-- Navigation Bar -->
        <top>
            <fx:include source="/navbar.fxml"/>
        </top>
        
        <center>
            <ScrollPane fitToWidth="true" styleClass="main-scroll-pane">
                <VBox spacing="20" style="-fx-background-color: #091221;">
                    <!-- Stock Title at the top -->
                    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="list-header">
                        <VBox spacing="5">
                            <Label text="Stock" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                            <Label text="Gérez votre stock" style="-fx-text-fill: #fe0369; -fx-font-size: 18px;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <TextField fx:id="searchField" promptText="Rechercher dans le stock..."
                                    style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: gray;"
                                    onKeyReleased="#searchStock"/>
                            <Button fx:id="addStockButton" onAction="#ButtonAjouterStock"
                                    style="-fx-background-color: #fe0369; -fx-text-fill: white;">
                                <graphic>
                                    <HBox spacing="10" alignment="CENTER">
                                        <Label text="+" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                                        <Label text="Nouveau Stock" style="-fx-text-fill: white;"/>
                                    </HBox>
                                </graphic>
                            </Button>
                        </HBox>
                    </HBox>

                    <!-- Table Header -->
                    <GridPane styleClass="platform-info" style="-fx-background-color: rgba(255, 255, 255, 0.05);">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="10"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="15"/>
                            <ColumnConstraints percentWidth="15"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                        </columnConstraints>
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Label text="ID" style="-fx-text-fill: #fe0369;" GridPane.columnIndex="0"/>
                        <Label text="Produit" style="-fx-text-fill: #fe0369;" GridPane.columnIndex="1"/>
                        <Label text="Quantité" style="-fx-text-fill: #fe0369;" GridPane.columnIndex="2"/>
                        <Label text="Prix" style="-fx-text-fill: #fe0369;" GridPane.columnIndex="3"/>
                        <Label text="Image" style="-fx-text-fill: #fe0369;" GridPane.columnIndex="4"/>
                        <Label text="Actions" style="-fx-text-fill: #fe0369;" GridPane.columnIndex="5"/>
                    </GridPane>

                    <!-- Stock List -->
                    <VBox fx:id="stockContainer" spacing="10" styleClass="list-content"/>

                    <!-- Edit Form -->
                    <VBox fx:id="editForm" spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-padding: 20;">
                        <Label text="Modifier le Stock" style="-fx-text-fill: #fe0369; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints minWidth="100" prefWidth="150"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="ID:" style="-fx-text-fill: #fe0369; -fx-font-size: 16px; -fx-font-weight: bold;" 
                                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtId" editable="false"
                                    style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14px;"
                                    GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Produit:" style="-fx-text-fill: #fe0369; -fx-font-size: 16px; -fx-font-weight: bold;" 
                                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtProduit"
                                    style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14px;"
                                    GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Quantité:" style="-fx-text-fill: #fe0369; -fx-font-size: 16px; -fx-font-weight: bold;" 
                                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtQuantity"
                                    style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14px;"
                                    GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Prix:" style="-fx-text-fill: #fe0369; -fx-font-size: 16px; -fx-font-weight: bold;" 
                                   GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtPrice"
                                    style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14px;"
                                    GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Image:" style="-fx-text-fill: #fe0369; -fx-font-size: 16px; -fx-font-weight: bold;" 
                                   GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                                <TextField fx:id="txtImage"
                                        style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14px;"
                                        HBox.hgrow="ALWAYS"/>
                                <Button text="Parcourir" onAction="#browseImage"
                                        style="-fx-background-color: transparent; -fx-border-color: #fe0369; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-width: 2;"/>
                            </HBox>

                            <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="5" GridPane.columnIndex="1">
                                <Button text="Sauvegarder" onAction="#saveStockChanges" 
                                        style="-fx-background-color: #fe0369; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                                <Button text="Annuler" onAction="#cancelEdit" 
                                        style="-fx-background-color: transparent; -fx-border-color: #fe0369; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-width: 2;"/>
                            </HBox>
                        </GridPane>
                    </VBox>
                </VBox>
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>
            </ScrollPane>
        </center>
    </BorderPane>
</StackPane>