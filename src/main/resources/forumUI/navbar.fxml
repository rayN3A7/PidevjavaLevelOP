<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@navbar.css" fx:controller="tn.esprit.Controllers.forum.NavbarController">
    <HBox fx:id="navbar" spacing="20" alignment="CENTER_LEFT" styleClass="navbar" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <ImageView fx:id="logo" fitHeight="40" fitWidth="120">
            <Image url="@level.png" />
        </ImageView>

        <Region fx:id="leftSpacer" HBox.hgrow="ALWAYS"/>

        <TextField fx:id="searchBar" promptText="Search by game name" styleClass="search-bar" HBox.hgrow="ALWAYS"/>

        <Region fx:id="rightSpacer" HBox.hgrow="ALWAYS"/>

        <HBox fx:id="navButtons" spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="homeButton" text="Acceuil" styleClass="nav-button"/>
            <Button fx:id="eventButton" text="Evenement" styleClass="nav-button"/>
            <Button fx:id="shopButton" text="Boutique" styleClass="nav-button"/>
            <Button fx:id="forumButton" text="Forum" styleClass="nav-button"/>
            <Button fx:id="coachingButton" text="Entraineur" styleClass="nav-button"/>
            <Button fx:id="joinUs" text="Join us" styleClass="nav-button"/>
        </HBox>
        <HBox fx:id="userBox" spacing="15" alignment="CENTER">
            <Label fx:id="nicknameLabel" text="" styleClass="nickname-label" visible="false"/>
            <Button fx:id="logoutButton" text="Logout" styleClass="login-button" visible="false"/>
        </HBox>

        <Button fx:id="loginButton" text="Login" styleClass="login-button"/>
    </HBox>
</AnchorPane>