<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1080.0" stylesheets="@register.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.Utilisateur.AddCoachController">
   <children>
      <Pane styleClass="root" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <Pane styleClass="overlay" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

      <Label styleClass="welcome-text" text="Créez votre compte" textFill="WHITE" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="120.0">
         <font>
            <Font size="40.0" />
         </font>
      </Label>

      <AnchorPane styleClass="login-form-container" stylesheets="@addCoach.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="700.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox layoutX="37.0" maxWidth="350.0" prefHeight="600.0" prefWidth="343.0" spacing="5.0" styleClass="login-pane" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
               <children>
                  <Label styleClass="label-title" text="Inscription">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>

                  <Label styleClass="subtitle" text="Remplissez les informations ci-dessous">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="cbgames" prefHeight="35.0" prefWidth="271.0" styleClass="combo-box" />
                  <TextArea fx:id="txtDescription" prefHeight="200.0" prefWidth="200.0" promptText="Description" styleClass="text-area" />

                  <Button fx:id="btnUploadCV" maxWidth="280.0" mnemonicParsing="false" onAction="#handleUploadCV" styleClass="upload-button" text="Uploader CV">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Label fx:id="lblCVStatus" prefHeight="17.0" prefWidth="213.0" text="Aucun fichier sélectionné" textFill="RED" />
                  <Button fx:id="btnGoToLogin" maxWidth="280.0" mnemonicParsing="false" onAction="#handleSubmit" styleClass="upload-button" text="Submit">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>

                  <Button fx:id="btnGoToHome" styleClass="link-button" text="Déjà enregistré ?" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="30.0" />

               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
