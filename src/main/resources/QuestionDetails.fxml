<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.Controllers.QuestionDetailsController" spacing="20" >
    <!-- Title and content of the question -->
    <VBox>
        <Label fx:id="questionTitle" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label fx:id="questionContent" style="-fx-font-size: 16px;"/>
        <Label fx:id="questionVotes" style="-fx-font-size: 14px; -fx-text-fill: #888888;"/>
    </VBox>

    <!-- Comments Section -->
    <VBox>
        <Label text="Comments" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Scrollable list of comments -->
        <ScrollPane>
            <VBox fx:id="commentContainer" style="-fx-padding: 10px; -fx-spacing: 10px;">
                <!-- Comment cards will be added here -->
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- Add Comment Section -->
    <VBox spacing="10">
        <TextField fx:id="commentInput" promptText="Write a comment..." style="-fx-pref-width: 400px;"/>
        <Button text="Post Comment" onAction="#postComment" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </VBox>
</VBox>
