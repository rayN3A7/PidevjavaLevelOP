<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom, #091221, #0236a5);" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.Coach.SessionManagementController">

    <!-- Top: Inclure la barre de navigation -->
    <top>
        <fx:include source="../forumUI/navbar.fxml" />
    </top>

    <!-- Center: Contenu principal -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 30px;">
            <!-- Titre principal -->
            <Label text="Gestion des Sessions" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0.5, 0, 2);" />

            <!-- Conteneur pour Ajouter et Supprimer une Session -->
            <HBox alignment="CENTER" spacing="40">
                <!-- Ajouter une Session -->
                <VBox spacing="15" style="-fx-padding: 20px; -fx-background-color: rgba(5,133,230,0.85); -fx-border-color: #0585e6; -fx-border-width: 2px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-max-width: 300px; -fx-effect: dropshadow(gaussian, rgba(2,54,165,0.7), 15, 0.6, 0, 6);">
                    <Label text="Ajouter une Session" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <TextField fx:id="gameField" promptText="Nom du jeu" style="-fx-background-color: white; -fx-border-radius: 8px; -fx-font-size: 14px; -fx-pref-width: 250px;" />
                    <TextField fx:id="priceField" promptText="Prix (€)" style="-fx-background-color: white; -fx-border-radius: 8px; -fx-font-size: 14px; -fx-pref-width: 250px;" />
                    <TextField fx:id="durationField" promptText="Durée (ex: 50 min)" style="-fx-background-color: white; -fx-border-radius: 8px; -fx-font-size: 14px; -fx-pref-width: 250px;" />
                    <Button fx:id="addSessionButton" onAction="#addSession" text="Ajouter Session" style="-fx-background-color: linear-gradient(to right, #fe0369, #ff6699); -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 12px; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.4, 0, 4); -fx-pref-width: 250px;" />
                </VBox>

                <!-- Supprimer une Session -->
                <VBox spacing="15" style="-fx-padding: 20px; -fx-background-color: rgba(5,133,230,0.85); -fx-border-color: #d0025b; -fx-border-width: 2px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-max-width: 300px; -fx-effect: dropshadow(gaussian, rgba(2,54,165,0.7), 15, 0.6, 0, 6);">
                    <Label text="Supprimer une Session" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <TextField fx:id="deleteGameField" promptText="ID session à supprimer" style="-fx-background-color: white; -fx-border-radius: 8px; -fx-font-size: 14px; -fx-pref-width: 250px;" />
                    <Button fx:id="deleteSessionButton" onAction="#deleteSession" text="Supprimer Session" style="-fx-background-color: linear-gradient(to right, #fe0369, #ff6699); -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 12px; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.4, 0, 4); -fx-pref-width: 250px;" />
                </VBox>
            </HBox>

            <!-- Afficher les Sessions disponibles -->
            <VBox spacing="15" style="-fx-padding: 20px; -fx-background-color: rgba(5,133,230,0.85); -fx-border-color: #2980B9; -fx-border-width: 2px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-max-width: 650px; -fx-effect: dropshadow(gaussian, rgba(2,54,165,0.7), 15, 0.6, 0, 6);">
                <Label text="Sessions disponibles" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Button fx:id="showSessionsButton" onAction="#showSessions" text="Afficher Sessions" style="-fx-background-color: linear-gradient(to right, #fe0369, #ff6699); -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 12px; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.4, 0, 4); -fx-pref-width: 200px;" />
                <TextArea fx:id="sessionsTextArea" editable="false" style="-fx-background-color: rgba(255,255,255,0.2); -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-font-size: 14px; -fx-text-fill: Black; -fx-pref-height: 150px;" />
            </VBox>
        </VBox>
    </center>

    <!-- Bottom: Bouton Suivant -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 20px;">
            <Button onAction="#UpdateSession" text="Suivant" style="-fx-background-color: linear-gradient(to right, #2980B9, #6DD5FA); -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 24px; -fx-background-radius: 12px; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.4, 0, 4);" />
        </HBox>
    </bottom>

</BorderPane>